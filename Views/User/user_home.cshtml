@model recipePickerApp.Models.User
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Profilul tau</title>

    <link rel="stylesheet" type="text/css" href="~/css/User/user_home.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>
<body>

    <div class="vertical-menu">
        <a asp-controller="User" asp-action="user_home" class="active">Contul meu</a>
        <a asp-controller="" asp-action="">Retete FAVORITE</a>
        <a asp-controller="" asp-action="">Retete GATITE</a>
        <a asp-controller="User" asp-action="">Retetele mele</a>
        <a asp-controller="User" asp-action="AddOwnRecipes">ADAUGA RETETA</a>
    </div>
   
    <div class="container">
        <h2>Detalii cont</h2>
     
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="commentHeading">
                    <span> Nume si prenume</span>

                </div>
            </div>
            <div class="panel-body"> @Html.DisplayFor(model => model.UserName)</div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="commentHeading">
                    <span> E-mail</span>

                </div>
            </div>
            <div class="panel-body">@Html.DisplayFor(model => model.Email)</div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="commentHeading">
                    <span> Parola</span>

                </div>
            </div>
            <div class="panel-body">@Html.DisplayFor(model => model.PasswordHash)</div>
        </div>
    </div>

</body>
</html>